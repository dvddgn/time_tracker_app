<% content_for :title, "Dashboard" %>

<div class="p-4 mt-14 bg-white dark:bg-gray-800 border-1 border-gray-200 rounded-lg dark:border-gray-700">
  <!-- Header Section -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Time Tracking Dashboard</h1>
    <p class="text-gray-600 dark:text-gray-400">Insights and analytics for your productivity patterns</p>
  </div>

  <!-- Dashboard Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- Category Breakdown Pie Chart -->
    <div class="bg-white rounded-lg shadow-sm dark:bg-gray-800 p-4 md:p-6 border border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white mb-1">Time by Category</h5>
          <p class="text-sm font-normal text-gray-500 dark:text-gray-400">How you spend your working hours</p>
        </div>
        <div class="flex items-center">
          <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-1 rounded-md dark:bg-blue-900 dark:text-blue-300">
            <%= @category_data.sum { |cat| cat[:hours] } %> total hours
          </span>
        </div>
      </div>
      
      <!-- Pie Chart Container -->
      <div id="category-pie-chart" class="py-6"></div>
      
      <!-- Category Legend -->
      <div class="grid grid-cols-1 border-gray-200 border-t dark:border-gray-700 pt-4">
        <div class="space-y-2">
          <% @category_data.each_with_index do |category, index| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= chart_colors[index % chart_colors.length] %>"></div>
                <span class="text-sm text-gray-700 dark:text-gray-300"><%= category[:name] %></span>
              </div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">
                <%= category[:hours] %>h (<%= category[:percentage] %>%)
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Placeholder for next charts -->
    <!-- Daily Progress Line Chart -->
    <div class="bg-white rounded-lg shadow-sm dark:bg-gray-800 p-4 md:p-6 border border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white mb-1">Daily Progress</h5>
          <p class="text-sm font-normal text-gray-500 dark:text-gray-400">Hours worked each day this week</p>
        </div>
        <div class="flex items-center">
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-1 rounded-md dark:bg-green-900 dark:text-green-300">
            <%= @daily_data.sum { |day| day[:hours] } %> hours this week
          </span>
        </div>
      </div>
      
      <!-- Line Chart Container -->
      <div id="daily-line-chart" class="py-6"></div>
      
      <!-- Daily Summary -->
      <div class="grid grid-cols-1 border-gray-200 border-t dark:border-gray-700 pt-4">
        <div class="grid grid-cols-3 gap-4 text-center">
          <div>
            <dt class="text-base font-normal text-gray-500 dark:text-gray-400 pb-1">Average Daily</dt>
            <dd class="leading-none text-xl font-bold text-blue-600 dark:text-blue-400">
              <%= (@daily_data.sum { |day| day[:hours] } / 5.0).round(1) %>h
            </dd>
          </div>
          <div>
            <dt class="text-base font-normal text-gray-500 dark:text-gray-400 pb-1">Most Productive</dt>
            <dd class="leading-none text-xl font-bold text-green-600 dark:text-green-400">
              <% best_day = @daily_data.max_by { |day| day[:hours] } %>
              <%= best_day[:day] %>
            </dd>
          </div>
          <div>
            <dt class="text-base font-normal text-gray-500 dark:text-gray-400 pb-1">Total Entries</dt>
            <dd class="leading-none text-xl font-bold text-gray-900 dark:text-white">
              <%= @daily_data.sum { |day| day[:entries] } %>
            </dd>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Weekly Hours Column Chart -->
    <div class="bg-white rounded-lg shadow-sm dark:bg-gray-800 p-4 md:p-6 border border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white mb-1">Weekly Overview</h5>
          <p class="text-sm font-normal text-gray-500 dark:text-gray-400">Day-by-day hour comparison</p>
        </div>
        <div class="flex items-center">
          <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-1 rounded-md dark:bg-purple-900 dark:text-purple-300">
            <% avg_hours = (@daily_data.sum { |day| day[:hours] } / 5.0).round(1) %>
            <%= avg_hours %>h daily average
          </span>
        </div>
      </div>
      
      <!-- Column Chart Container -->
      <div id="weekly-column-chart" class="py-6"></div>
      
      <!-- Weekly Insights -->
      <div class="grid grid-cols-1 border-gray-200 border-t dark:border-gray-700 pt-4">
        <div class="grid grid-cols-2 gap-4">
          <div class="text-center">
            <dt class="text-base font-normal text-gray-500 dark:text-gray-400 pb-1">Peak Day</dt>
            <dd class="leading-none text-lg font-bold text-green-600 dark:text-green-400">
              <% peak_day = @daily_data.max_by { |day| day[:hours] } %>
              <%= peak_day[:day] %> - <%= peak_day[:hours] %>h
            </dd>
          </div>
          <div class="text-center">
            <dt class="text-base font-normal text-gray-500 dark:text-gray-400 pb-1">Light Day</dt>
            <dd class="leading-none text-lg font-bold text-blue-600 dark:text-blue-400">
              <% light_day = @daily_data.min_by { |day| day[:hours] } %>
              <%= light_day[:day] %> - <%= light_day[:hours] %>h
            </dd>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Top Categories Horizontal Bar Chart -->
    <div class="bg-white rounded-lg shadow-sm dark:bg-gray-800 p-4 md:p-6 border border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white mb-1">Top Work Categories</h5>
          <p class="text-sm font-normal text-gray-500 dark:text-gray-400">Most time-intensive activities</p>
        </div>
        <div class="flex items-center">
          <span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-1 rounded-md dark:bg-orange-900 dark:text-orange-300">
            Top <%= @top_categories.length %> categories
          </span>
        </div>
      </div>
      
      <!-- Horizontal Bar Chart Container -->
      <div id="top-categories-chart" class="py-6"></div>
      
      <!-- Category Rankings -->
      <div class="grid grid-cols-1 border-gray-200 border-t dark:border-gray-700 pt-4">
        <div class="space-y-3">
          <% @top_categories.each_with_index do |category, index| %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex items-center justify-center w-6 h-6 bg-gray-100 dark:bg-gray-700 rounded-full mr-3">
                  <span class="text-xs font-medium text-gray-600 dark:text-gray-300"><%= index + 1 %></span>
                </div>
                <span class="text-sm font-medium text-gray-900 dark:text-white"><%= category[:category] %></span>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-sm font-bold text-blue-600 dark:text-blue-400"><%= category[:formatted] %></span>
                <div class="w-16 bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (category[:hours] / @top_categories.first[:hours] * 100).round %>%"></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Pass data to JavaScript -->
<script>
  window.dashboardData = {
    categoryData: <%= raw @category_data.to_json %>,
    dailyData: <%= raw @daily_data.to_json %>,
    weeklyData: <%= raw @weekly_data.to_json %>,
    topCategories: <%= raw @top_categories.to_json %>
  };
</script>